{
	"name": "webext-alert",
	"version": "1.0.3",
	"description": "alert() for background pages/workers in Web Extensions",
	"keywords": [
		"browser",
		"chrome",
		"safari",
		"extension",
		"alert",
		"popup",
		"background",
		"window",
		"prompt",
		"firefox",
		"webextension"
	],
	"repository": "fregante/webext-alert",
	"funding": "https://github.com/sponsors/fregante",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"type": "module",
	"exports": "./index.js",
	"types": "./index.d.ts",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"demo:build": "parcel build --no-cache",
		"demo:watch": "parcel watch --no-cache --no-hmr",
		"prepack": "tsc --sourceMap false",
		"test": "xo && tsc --noEmit",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"no-alert": "off"
		}
	},
	"dependencies": {
		"webext-detect": "^5.0.2",
		"webext-events": "^3.0.1"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.12.1-canary.3293",
		"@parcel/transformer-webextension": "^2.12.0",
		"@sindresorhus/tsconfig": "^6.0.0",
		"@types/chrome": "^0.0.268",
		"parcel": "^2.0.0-canary.1668",
		"typescript": "^5.5.2",
		"xo": "^0.58.0"
	},
	"engines": {
		"node": ">=20"
	},
	"@parcel/resolver-default": {
		"packageExports": true
	},
	"targets": {
		"main": false,
		"mv2": {
			"engines": {
				"browsers": "last 2 Chrome versions"
			},
			"source": "demo/mv2/manifest.json",
			"sourceMap": {
				"inline": true
			}
		},
		"mv3": {
			"engines": {
				"browsers": "last 2 Chrome versions"
			},
			"source": "demo/mv3/manifest.json",
			"sourceMap": {
				"inline": true
			}
		}
	},
	"webExt": {
		"sourceDir": "dist/mv3"
	}
}
